    ViewData["Title"] = "Delete";
    Layout = "UserLayout";
}

<h2>Are you sure to Remove this Movie from cart?</h2>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MovieName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NoOfTickets)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NoOfTickets)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SeatNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeatNo)
        </dd>
